{
  "compilerOptions": {
    "module": "esnext",
    "target": "ESNext",
    "declaration": false,
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "Node",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "lib": ["ESNext"],
    "useDefineForClassFields": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "."
  }
}
